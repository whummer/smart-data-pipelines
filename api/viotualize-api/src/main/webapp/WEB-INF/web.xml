<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath*:viotualize-api.xml</param-value>
    </context-param>

    <listener>
        <listener-class>com.viotualize.api.metrics.MetricsRegistryInitializingContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>Metrics</servlet-name>
        <servlet-class>com.codahale.metrics.servlets.MetricsServlet</servlet-class>
        <load-on-startup>-1</load-on-startup>
    </servlet>

    <!--<servlet>
        <servlet-name>Health</servlet-name>
        <servlet-class>at.a1telekom.asmp.appshoster.health.SimpleHealthServlet</servlet-class>
    </servlet>-->

    <servlet>
        <description>Apache CXF Endpoint</description>
        <display-name>cxf</display-name>
        <servlet-name>cxf</servlet-name>
        <servlet-class>com.viotualize.api.cxf.RefIdEnabledCxfServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>cxf</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Metrics</servlet-name>
        <url-pattern>/metrics</url-pattern>
    </servlet-mapping>

   <!-- <servlet-mapping>
        <servlet-name>Health</servlet-name>
        <url-pattern>/health</url-pattern>
    </servlet-mapping>-->

</web-app>
