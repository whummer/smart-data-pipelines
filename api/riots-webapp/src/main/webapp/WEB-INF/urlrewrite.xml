<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 3.1//EN"  "http://www.tuckey.org/res/dtds/urlrewrite3.1.dtd">
<urlrewrite>
    <rule match-type="regex">
        <from>^/$</from>
        <to>/app/index.html</to>
    </rule>
    <rule match-type="regex">
        <from>^/app/$</from>
        <to>/app/index.html</to>
    </rule>
    <rule match-type="regex">
        <from>^/img/(.+)$</from>
        <to>/app/img/$1</to>
    </rule>
    <rule match-type="regex">
        <from>^/styles/(.+)$</from>
        <to>/app/styles/$1</to>
    </rule>
    <rule match-type="regex">
        <from>^/scripts/(.+)$</from>
        <to>/app/scripts/$1</to>
    </rule>
    <rule match-type="regex">
        <from>^/api/(.+)$</from>
        <to>/app/api/$1</to>
    </rule>
    <rule match-type="regex">
        <from>^/favicon\.ico$</from>
        <to>/app/riots.favicon.ico</to>
    </rule>
    <rule match-type="regex">
        <from>^/config\.(.*\.)?js$</from>
        <to>/app/config\.$1js</to>
    </rule>
    <rule match-type="regex">
        <from>^/demo/golfcars$</from>
        <to>/demo/golfcars/index.html</to>
    </rule>
    <rule match-type="regex">
        <from>^/golfcars$</from>
        <to>/demo/golfcars/index.html</to>
    </rule>
</urlrewrite>