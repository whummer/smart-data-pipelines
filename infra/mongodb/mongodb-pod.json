{
    "id": "mongodb-pod",
    "apiVersion": "v1beta1",
    "kind": "Pod",
    "desiredState": {
        "manifest": {
            "version": "v1beta1",
            "id": "mongodb-pod",
            "containers": [{
                "name": "mongodb",
                "image": "dockerfile/mongodb",
                "ports": [{
                    "containerPort": 27017,
                    "hostPort": 27017
                }],
                "command": [
                    "mongod", "--smallfiles"
                ]
            }]
        }
    },
    "labels": {
        "name": "mongodb",
        "environment": "dev"
    }
}