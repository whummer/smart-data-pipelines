{
  "id": "mongodb",
  "apiVersion": "v1beta1",
  "kind": "ReplicationController",
  "desiredState": {
    "replicas": 1,
    "replicaSelector": {
      "name": "mongodb"
    },
    "podTemplate": {
      "desiredState": {
        "manifest": {
          "version": "v1beta1",
          "id": "mongodb",
          "containers": [
            {
              "name": "mongodb",
              "image": "dockerfile/mongodb",
              "ports": [
                {
                  "containerPort": 27017,
                  "hostPort": 27017
                }
              ],
              "command": [
                "mongod",
                "--smallfiles"
              ]
            }
          ]
        }
      },
      "labels": {
        "name": "mongodb",
        "env": "${RIOTS_ENV}"
      }
    }
  },
  "labels": {
    "name": "mongodb",
    "env": "${RIOTS_ENV}"
  }
}