{
    "id": "riots-files",
    "apiVersion": "v1beta1",
    "kind": "ReplicationController",
    "desiredState": {
        "replicas": 1,
        "replicaSelector": {
            "name": "riots-files"
        },
        "podTemplate": {
            "desiredState": {
                "manifest": {
                    "version": "v1beta1",
                    "id": "riots-files",
                    "containers": [
                        {
                            "name": "riots-files",
                            "image": "${DOCKER_REGISTRY}/riots/service-files",
                            "ports": [
                                {
                                    "name": "riots-files-port",
                                    "containerPort": 8084
                                }
                            ],
                            "env" : [
                            	{
                            		"name": "JAVA_OPTS",
                            		"value": "-Deureka.hostname=${EUREKA_HOSTNAME} -Dstorage.directory=/tmp"
                            	}

                            ]
                        }
                    ]
                }
            },
            "labels": {
                "name": "riots-files",
        		"env": "${RIOTS_ENV}"
            }
        }
    },
    "labels": {
        "name": "riots-files",
        "env": "${RIOTS_ENV}"
    }
}