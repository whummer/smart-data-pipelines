{
    "id": "riots-simulation",
    "apiVersion": "v1beta1",
    "kind": "ReplicationController",
    "desiredState": {
        "replicas": 1,
        "replicaSelector": {
            "name": "riots-simulation"
        },
        "podTemplate": {
            "desiredState": {
                "manifest": {
                    "version": "v1beta1",
                    "id": "riots-simulation",
                    "containers": [
                        {
                            "name": "riots-simulation",
                            "image": "${DOCKER_REGISTRY}/riots/service-simulation:${IMAGE_TAG}",
                            "ports": [
                                {
                                    "containerPort": 8086
                                }
                            ],
                            "env" : [
                            	{
                            		"name": "JAVA_OPTS",
                            		"value": "-Deureka.hostname=${EUREKA_HOSTNAME} -Dmongodb.hostname=${MONGODB_HOSTNAME} -Dactivemq.hostname=${ACTIVEMQ_HOSTNAME}"
                            	}

                            ]
                        }
                    ]
                }
            },
            "labels": {
                "name": "riots-simulation",
        		"env": "${RIOTS_ENV}"
            }
        }
    },
    "labels": {
        "name": "riots-simulation",
        "env": "${RIOTS_ENV}"
    }
}