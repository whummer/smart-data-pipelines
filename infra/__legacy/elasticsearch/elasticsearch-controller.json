{
  "id": "elasticsearch",
  "apiVersion": "v1beta1",
  "kind": "ReplicationController",
  "desiredState": {
    "replicas": 1,
    "replicaSelector": {
      "name": "elasticsearch"
    },
    "podTemplate": {
      "desiredState": {
        "manifest": {
          "version": "v1beta1",
          "id": "elasticsearch",
          "containers": [
            {
              "name": "elasticsearch",
              "image": "dockerfile/elasticsearch",
              "ports": [
                {
                  "containerPort": 9200,
                  "hostPort": 9200
                },
                {
                  "containerPort": 9300,
                  "hostPort": 9300
                }
              ]
            }
          ]
        }
      },
      "labels": {
        "name": "elasticsearch",
    	"env": "${RIOTS_ENV}"
      }
    }
  },
  "labels": {
    "name": "elasticsearch",
    "env": "${RIOTS_ENV}"
  }
}