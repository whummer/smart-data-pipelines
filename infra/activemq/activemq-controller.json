{
	"id": "activemq",
	"apiVersion": "v1beta1",
	"kind": "ReplicationController",
	"desiredState": {
	    "replicas": 1,
	    "replicaSelector": { "name": "activemq"},
	    "podTemplate": {
	  		"manifest" : {
	 			"version": "v1beta1",
	    		"id": "activemq",
	    		"containers": [{
					"name": "activemq",
	    			"image": "aterreno/activemq-dockerfile",
            		"ports": [
            			{ "containerPort": 61612 }, 
						{ "containerPort": 61613 },
						{ "containerPort": 61616 },
						{ "containerPort": 8161 }
            		]
	    		}]
			},
			"labels": { "name": "activemq" }
		}
	},
	"labels": {"name": "activemq"}
}