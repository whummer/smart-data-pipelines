{
"apiVersion": "v1",
"kind": "Pod",
"metadata": {"name":"k8s-master"},
"spec":{
	"hostNetwork": true,
	"containers":[
		{
			"name": "controller-manager",
			"image": "riox/hyperkube:v1.0.6",
			"command": [
							"/hyperkube",
							"controller-manager",
							"--master=127.0.0.1:8080",
							"--v=2"
				]
		},
		{
			"name": "apiserver",
			"image": "riox/hyperkube:v1.0.6",
			"command": [
							"/hyperkube",
							"apiserver",
							"--portal-net=10.0.0.1/24",
							"--address=0.0.0.0",
							"--etcd_servers=http://127.0.0.1:4001",
							"--cluster_name=kubernetes",
							"--v=2"
				]
		},
		{
			"name": "scheduler",
			"image": "riox/hyperkube:v1.0.6",
			"command": [
							"/hyperkube",
							"scheduler",
							"--master=127.0.0.1:8080",
							"--v=2"
				]
		}
	]
 }
}
