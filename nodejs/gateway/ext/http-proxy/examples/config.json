{

	"port" : 8000,
	"logging" : true,	

	"ssl" : {
		"key":    "./ssl.key",
		"cert" :  "./ssl.crt" 
	},

	"vhosts" : [
		{
			"name": "localhost",
			"target" : [ "user-service", "organization-service"]
		}
	],

	"targets" : [
		{
				"name" : "user-service",
				"protocol": "http",
				"host": "127.0.0.1",
				"port": 3000,

				"routes" : [
					{
						"src": "/api/v1/users",
						"dest" : "/users",
						"methods" : [ "GET", "POST" ]
					}					
				]
		}
		,
		{
				"name" : "websocket-service",
				"protocol": "ws",
				"host": "localhost",
				"port": 9014,

				"routes" : [
					{
						"src": "/mysocket",
						"dest" : "/"
					}					
				]
		}
	

	]

}