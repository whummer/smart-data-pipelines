{

	"port" : 8000,
	"logging" : true,	

	"ssl" : {
		"key":    "./ssl.key",
		"cert" :  "./ssl.crt" 
	},

	"vhosts" : [
		{
			"name": "localhost",
			"target" : "user-service"
		}
