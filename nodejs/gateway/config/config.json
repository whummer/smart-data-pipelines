{
	"server": {
		"accessLog": "/var/log/hipache/hipache.log",
		"workers": 1,
		"maxSockets": 100,
		"deadBackendTTL": 30,
		"tcpTimeout": 30,
		"retryOnError": 3,
		"deadBackendOn500": true,
		"httpKeepAlive": false,
		"staticDir": null

	},
	"http": {
		"port": 8090,
		"bind": ["0.0.0.0"]
	},
	"https": {
		"bind": "0.0.0.0",
		"port": 8091,
		"cert": "config/server.crt",
		"key": "config/server.key"
	},
	"extensions": [
		{
			"name": "kafka",
			"enabled": true,
			"config": {
				"broker-host": "localhost",
				"broker-port": 9192
			}
		}
	],
	"driver": "redis://redis.dev.riox.internal"
}
